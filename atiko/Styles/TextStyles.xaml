<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  стиль текстових блоків  -->
    <Style x:Key="BaseTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource MontserratRegularFont}" />
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontSize" Value="14" />
    </Style>
    <!--  заголовки першого рівня  -->
    <Style
        x:Key="Heading1Style"
        BasedOn="{StaticResource BaseTextBlockStyle}"
        TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DMSansBlackFont}" />
        <Setter Property="FontSize" Value="40" />
        <Setter Property="FontWeight" Value="Black" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,0,24" />
    </Style>
    <!--  другого  -->
    <Style
        x:Key="Heading2Style"
        BasedOn="{StaticResource BaseTextBlockStyle}"
        TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DMSansBoldFont}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <!--  третього  -->
    <Style
        x:Key="Heading3Style"
        BasedOn="{StaticResource BaseTextBlockStyle}"
        TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DMSansBoldFont}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <!--  основний текст  -->
    <Style
        x:Key="BodyTextStyle"
        BasedOn="{StaticResource BaseTextBlockStyle}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
    </Style>
    <!--  підписи  -->
    <Style
        x:Key="CaptionTextStyle"
        BasedOn="{StaticResource BaseTextBlockStyle}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
    </Style>
    <!--  текст помилок  -->
    <Style
        x:Key="ErrorTextStyle"
        BasedOn="{StaticResource BaseTextBlockStyle}"
        TargetType="TextBlock">
        <Setter Property="Foreground" Value="#FF7043" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,8,0,0" />
    </Style>

</ResourceDictionary>
