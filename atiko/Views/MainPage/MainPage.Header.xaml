<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:atiko.Converters">

    <DataTemplate x:Key="MainPage_HeaderTemplate">
        <Border Background="{StaticResource WhiteBrush}"
                CornerRadius="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Padding="0,0,0,12">
            <Grid VerticalAlignment="Center"
                  HorizontalAlignment="Stretch"
                  MinHeight="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1"
                      Margin="0,14,0,0"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Stretch">
                    <TextBox
                        x:Name="SearchTextBox"
                        Padding="36,8,16,8"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch"
                        CornerRadius="14"
                        FocusVisualPrimaryBrush="{StaticResource PrimaryLightBrush}"
                        FontSize="16"
                        PlaceholderText="Text smth to search..."
                        PlaceholderForeground="{StaticResource SystemControlForegroundBaseMediumLowBrush}"
                        Style="{StaticResource LightTextBoxStyle}" />
                </Grid>

                <ToggleSwitch Grid.Column="2"
                              x:Name="ThemeToggle"
                              Width="60"
                              Height="32"
                              FontSize="12"
                              Style="{StaticResource ThemeToggleSwitchStyle}"
                              IsOn="{Binding IsDarkTheme, Mode=TwoWay}"
                              Margin="16,0,16,0"
                              VerticalAlignment="Center" />

                <StackPanel Grid.Column="3"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,0,16,0">
                    <Button
                        Width="40"
                        Height="40"
                        Padding="0"
                        Background="Transparent"
                        BorderBrush="{x:Null}"
                        Command="{Binding NavigateToProfileCommand}"
                        Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid Width="24" Height="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image
                                Source="{Binding CurrentUser.ImageUri, Mode=OneWay}"
                                Stretch="UniformToFill"
                                Width="24"
                                Height="24"
                                Visibility="{Binding CurrentUser.ImageUri, Converter={StaticResource NonEmptyStringToVisibilityConverter}, Mode=OneWay}" />
                            <FontIcon
                                FontFamily="Segoe MDL2 Assets"
                                Glyph="î»"
                                Foreground="{StaticResource PrimaryBrush}"
                                Width="24"
                                Height="24"
                                Visibility="{Binding CurrentUser.ImageUri, Converter={StaticResource NonEmptyStringToVisibilityConverter}, ConverterParameter='inverse', Mode=OneWay}" />
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>