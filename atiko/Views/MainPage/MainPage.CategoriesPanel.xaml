<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">
    <DataTemplate x:Key="MainPage_CategoriesPanelTemplate">
        <Border Style="{StaticResource PanelStyle}"
                HorizontalAlignment="Stretch"
                Margin="0,0,0,12"
                CornerRadius="0">
            <StackPanel Spacing="12"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                <TextBlock Style="{StaticResource Heading2Style}"
                           Text="Categories" />
                <ScrollViewer HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Disabled"
                              HorizontalScrollMode="Enabled"
                              Margin="0,0,0,4">
                    <StackPanel Orientation="Horizontal"
                                Spacing="8"
                                HorizontalAlignment="Stretch"
                                Padding="0,0,0,6">
                        <Button Content="All"
                                Command="{Binding SelectCategoryCommand}"
                                CommandParameter="All"
                                Style="{StaticResource SmallCategoryButtonStyle}"
                                Margin="4,0"/>
                        <Button Content="Collectibles"
                                Command="{Binding SelectCategoryCommand}"
                                CommandParameter="Collectibles"
                                Style="{StaticResource SmallCategoryButtonStyle}"
                                Margin="4,0"/>
                        <Button Content="Accessories"
                                Command="{Binding SelectCategoryCommand}"
                                CommandParameter="Accessories"
                                Style="{StaticResource SmallCategoryButtonStyle}"
                                Margin="4,0"/>
                        <Button Content="Wearables"
                                Command="{Binding SelectCategoryCommand}"
                                CommandParameter="Wearables"
                                Style="{StaticResource SmallCategoryButtonStyle}"
                                Margin="4,0"/>
                        <Button Content="Tableware"
                                Command="{Binding SelectCategoryCommand}"
                                CommandParameter="Tableware"
                                Style="{StaticResource SmallCategoryButtonStyle}"
                                Margin="4,0"/>
                        <Button Content="Tech"
                                Command="{Binding SelectCategoryCommand}"
                                CommandParameter="Tech"
                                Style="{StaticResource SmallCategoryButtonStyle}"
                                Margin="4,0"/>
                        <Button Content="Timepieces"
                                Command="{Binding SelectCategoryCommand}"
                                CommandParameter="Timepieces"
                                Style="{StaticResource SmallCategoryButtonStyle}"
                                Margin="4,0"/>
                        <Button Content="Jewelry"
                                Command="{Binding SelectCategoryCommand}"
                                CommandParameter="Jewelry"
                                Style="{StaticResource SmallCategoryButtonStyle}"
                                Margin="4,0"/>
                        <Button Content="Art"
                                Command="{Binding SelectCategoryCommand}"
                                CommandParameter="Art"
                                Style="{StaticResource SmallCategoryButtonStyle}"
                                Margin="4,0"/>
                        <Button Content="Figurines"
                                Command="{Binding SelectCategoryCommand}"
                                CommandParameter="Figurines"
                                Style="{StaticResource SmallCategoryButtonStyle}"
                                Margin="4,0"/>
                        <Button Content="Decorative Items"
                                Command="{Binding SelectCategoryCommand}"
                                CommandParameter="Decorative Items"
                                Style="{StaticResource SmallCategoryButtonStyle}"
                                Margin="4,0"/>
                        <Button Content="Decorative Accessories"
                                Command="{Binding SelectCategoryCommand}"
                                CommandParameter="Decorative Accessories"
                                Style="{StaticResource SmallCategoryButtonStyle}"
                                Margin="4,0"/>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>