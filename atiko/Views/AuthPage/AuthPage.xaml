<Page
    x:Class="atiko.Views.AuthPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:atiko.Converters"
    xmlns:views="using:atiko.Views">

    <Page.Background>
        <ImageBrush ImageSource="/Assets/Images/background.png" Stretch="UniformToFill" />
    </Page.Background>

    <ScrollViewer
        Background="Transparent"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto">
        <StackPanel
            MinWidth="520"
            Margin="0,40"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="18">

            <TextBlock
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                FontFamily="Georgia"
                FontSize="36"
                FontWeight="SemiBold"
                Foreground="#62473D"
                Text="{x:Bind ViewModel.Title, Mode=OneWay}" />

            <StackPanel
                MinWidth="520"
                Margin="0,0,0,18"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="18">
                <Button
                    Width="140"
                    Height="40"
                    Background="{x:Bind ViewModel.IsLoginMode, Converter={StaticResource ModeToBrushConverter}}"
                    BorderThickness="0"
                    Command="{x:Bind ViewModel.GoLoginCommand}"
                    Content="Log In"
                    CornerRadius="10"
                    FontFamily="Georgia"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="White" />
                <Button
                    Width="140"
                    Height="40"
                    Background="{x:Bind ViewModel.IsSignUpMode, Converter={StaticResource ModeToBrushConverter}}"
                    BorderThickness="0"
                    Command="{x:Bind ViewModel.GoSignUpCommand}"
                    Content="Sign Up"
                    CornerRadius="10"
                    FontFamily="Georgia"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="White" />
                <Button
                    Width="180"
                    Height="40"
                    Background="{x:Bind ViewModel.IsChangePasswordMode, Converter={StaticResource ModeToBrushConverter}}"
                    BorderThickness="0"
                    Command="{x:Bind ViewModel.GoChangePasswordCommand}"
                    Content="Change Password"
                    CornerRadius="10"
                    FontFamily="Georgia"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="White" />
                <Button
                    Width="160"
                    Height="40"
                    Background="{x:Bind ViewModel.IsGuestMode, Converter={StaticResource ModeToBrushConverter}}"
                    BorderThickness="0"
                    Command="{x:Bind ViewModel.GoGuestModeCommand}"
                    Content="Guest Mode"
                    CornerRadius="10"
                    FontFamily="Georgia"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="White" />
            </StackPanel>

            <Border
                MinWidth="480"
                Padding="36"
                HorizontalAlignment="Center"
                Background="#F7F2EE"
                CornerRadius="36">
                <ContentControl ContentTemplate="{x:Bind ViewModel.CurrentTemplate, Mode=OneWay}" />
            </Border>

            <TextBlock
                Margin="0,12,0,0"
                FontFamily="Georgia"
                FontSize="16"
                Foreground="#B44C4C"
                Text="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                TextWrapping="Wrap"
                Visibility="{x:Bind ViewModel.ErrorMessageVisibility, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>
    </ScrollViewer>
</Page>
