<UserControl
    x:Class="atiko.Views.SignUpView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#F7F2EE" MinWidth="480" Padding="32" HorizontalAlignment="Stretch">
        <StackPanel Spacing="18" HorizontalAlignment="Stretch">

            <TextBlock Text="Name" FontSize="18" FontWeight="SemiBold" Foreground="#62473D"/>
            <TextBox
                x:Name="NameTextBox"
                PlaceholderText="Your name"
                Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TextChanged="NameTextBox_TextChanged"
                Background="White"
                BorderBrush="#C6B1A1"
                BorderThickness="1"
                CornerRadius="8"
                FontSize="16"
                Height="48"
                Padding="12"
                HorizontalAlignment="Stretch"
                MinWidth="480"
                VerticalContentAlignment="Center"/>

            <Button
                Content="Upload avatar"
                Command="{Binding UploadAvatarCommand}"
                Style="{StaticResource SecondaryButtonStyle}"
                HorizontalAlignment="Stretch"
                MinWidth="480"/>

            <TextBlock Text="Date of Birth" FontSize="18" FontWeight="SemiBold" Foreground="#624B1C"/>
            <DatePicker
                x:Name="DatePicker"
                Date="{Binding BirthdayForPicker, Mode=TwoWay}"
                DateChanged="DatePicker_DateChanged"
                FontSize="16"
                Background="White"
                BorderBrush="#C6B1A1"
                BorderThickness="1"
                CornerRadius="8"
                Height="70"
                Padding="12"
                HorizontalAlignment="Stretch"
                MinWidth="480"
                VerticalContentAlignment="Center"/>

            <TextBlock Text="Gender" FontSize="18" FontWeight="SemiBold" Foreground="#624B1C"/>
            <ComboBox
                x:Name="GenderComboBox"
                PlaceholderText="Select gender"
                ItemsSource="{Binding GenderOptions, Mode=OneWay}"
                SelectedItem="{Binding Gender, Mode=TwoWay}"
                SelectionChanged="GenderComboBox_SelectionChanged"
                Background="White"
                BorderBrush="#C6B1A1"
                BorderThickness="1"
                CornerRadius="8"
                FontSize="16"
                Height="48"
                Padding="12"
                HorizontalAlignment="Stretch"
                MinWidth="480"
                VerticalContentAlignment="Center"/>

            <TextBlock Text="Email" FontSize="18" FontWeight="SemiBold" Foreground="#624B1C"/>
            <TextBox
                x:Name="EmailTextBox"
                PlaceholderText="email@example.com"
                Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TextChanged="EmailTextBox_TextChanged"
                Background="White"
                BorderBrush="#C6B1A1"
                BorderThickness="1"
                CornerRadius="8"
                FontSize="16"
                Height="48"
                Padding="12"
                HorizontalAlignment="Stretch"
                MinWidth="480"
                VerticalContentAlignment="Center"/>

            <TextBlock Text="Password" FontSize="18" FontWeight="SemiBold" Foreground="#624B1C"/>
            <PasswordBox
                x:Name="PasswordBox"
                Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                PasswordChanged="PasswordBox_PasswordChanged"
                PlaceholderText="Password"
                Background="White"
                BorderBrush="#C6B1A1"
                BorderThickness="1"
                CornerRadius="8"
                FontSize="16"
                Height="48"
                Padding="12"
                HorizontalAlignment="Stretch"
                MinWidth="480"
                VerticalContentAlignment="Center"/>

            <TextBlock Text="Confirm Password" FontSize="18" FontWeight="SemiBold" Foreground="#624B1C"/>
            <PasswordBox
                x:Name="ConfirmPasswordBox"
                Password="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                PlaceholderText="Confirm Password"
                Background="White"
                BorderBrush="#C6B1A1"
                BorderThickness="1"
                CornerRadius="8"
                FontSize="16"
                Height="48"
                Padding="12"
                HorizontalAlignment="Stretch"
                MinWidth="480"
                VerticalContentAlignment="Center"/>

            <Button
                Content="Sign Up"
                Command="{Binding RegisterCommand}"
                IsEnabled="{Binding CanRegister, Mode=OneWay}"
                Style="{StaticResource PrimaryButtonStyle}"
                HorizontalAlignment="Stretch"
                MinWidth="480"/>
        </StackPanel>
    </Grid>
</UserControl>
